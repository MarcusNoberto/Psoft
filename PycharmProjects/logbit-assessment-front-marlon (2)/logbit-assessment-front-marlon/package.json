{
  "name": "logbit-assessment",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "watch-css": "parcel watch assessment/static/assessment/assets/src/css/tailwind.base.css --dist-dir assessment/static/assessment/assets/dist/css --no-cache -p 1339",
    "watch-js": "parcel watch assessment/static/assessment/assets/src/js/main.js --dist-dir assessment/static/assessment/assets/dist/js --no-content-hash --no-cache -p 1440",
    "watch-scss": "parcel watch assessment/static/assessment/assets/src/sass/style.scss --dist-dir assessment/static/assessment/assets/dist/css --no-content-hash --no-cache -p 1341",
    
    "build-css": "parcel build assessment/static/assessment/assets/src/css/tailwind.base.css --dist-dir assessment/static/assessment/assets/dist/css --no-cache",
    "build-js": "parcel build assessment/static/assessment/assets/src/js/main.js --dist-dir assessment/static/assessment/assets/dist/js --no-content-hash --no-cache",
    "build-scss": "parcel build assessment/static/assessment/assets/src/sass/style.scss --dist-dir assessment/static/assessment/assets/dist/css --no-content-hash --no-cache",
    
    "dev": "concurrently --kill-others \"npm run watch-css\" \"npm run watch-js\" \"npm run watch-scss\"",
    "dev-lite": "concurrently --kill-others \"npm run watch-css\" \"npm run watch-js\"",
    "build": "concurrently  \"npm run build-css\" \"npm run build-js\" \"npm run build-scss\""
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimeNovaData/logbit-assessment.git"
  },
  "author": "",
  "license": "ISC",

  "devDependencies": {
    "@parcel/config-default": "^2.5.0",
    "@parcel/core": "^2.5.0",
    "@parcel/transformer-sass": "^2.5.0",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.0",
    "parcel": "^2.5.0",
    "parcel-bundler": "^1.12.5",
    "postcss": "^8.4.14",
    "postcss-color-function": "^4.1.0",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-simple-vars": "^6.0.3",
    "tailwindcss": "^3.0.24"
  },
  
  "bugs": {
    "url": "https://github.com/TimeNovaData/logbit-assessment/issues"
  },
  "homepage": "https://github.com/TimeNovaData/logbit-assessment#readme"
}
